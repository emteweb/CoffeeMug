<%- include('partials/head') %>

    <body>
        <div class="container">
            <%- include('partials/navbar') %>

                <div class="card text-dark bg-light mb-3 mx-auto mt-5" style="max-width: 38rem;">
                    <div class="card text-center" style="width: 38rem; ">
                        <div class="card-header"><b>Editing the product ...</b></div>
                        <div class="card-body">

                            <form action="/products/<%= product._id %>?_method=PUT" method="POST">
                                <div class="mb-3">
                                    <label for="name" class="form-label mb-2"></label>
                                    <input class="form-control" type="text" id="name" name="name"
                                        value="<%= product.name %> ">

                                    <label for="price" class="form-label"></label>
                                    <input class="form-control" type="number" id="price" name="price"
                                        value="<%= product.price %>">
                                </div>
                                <div class="btn-group" role="group" aria-label="Basic mixed styles example">

                                    <button class="btn btn-success btn-lg" style="min-width: 120px;">Save</button>

                                    <button class="btn btn-danger btn-lg" style="min-width: 120px;">
                                        <a href="/products/<%= product._id %>"
                                            style="text-decoration: none;color: white;">Cancel</a>
                                    </button>




                                </div>
                            </form>
                        </div>
                    </div>
                </div>

        </div>
        <%- include('partials/footer') %>
    </body>

    </html>